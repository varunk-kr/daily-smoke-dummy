    <test name="Web1-KCP: Validate new order creation via KSP and verify Order in Cue for PCL BYOB snap EBT Order ">
        <parameter name="grid" value="selenoidGrid"/>
        <parameter name="platform" value="Linux"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="browserVersion" value="latest"/>
        <parameter name="url" value="https://www-stage.kingsoopers.com/signin"/>
        <parameter name="wait" value="60"/>
        <parameter name="logging" value="info"/>
        <parameter name="driverType" value="browser"/>
        <parameter name="highlight" value="false"/>
        <parameter name="retryFailedTests" value="0"/>
        <parameter name="singleSessionSuite" value="true"/>
        <groups>
            <run>
                <include name="ete_byob_expressOrder_db_9172_web_part1_nonEbt"/>

            </run>
        </groups>
        <packages>
            <package name="com.krogerqa.web.cases.byob"/>
        </packages>
    </test>

