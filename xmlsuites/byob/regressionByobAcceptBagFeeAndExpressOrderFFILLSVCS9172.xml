<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Regression ETE" parallel="false" thread-count="1" group-by-instances="true">
    <listeners>
        <listener
                class-name="com.krogerqa.seleniumcentral.framework.listeners.ExtentTestNGIReporterListener"/>
